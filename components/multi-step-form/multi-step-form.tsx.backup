// Step 5: Workspace Setup
function Step5({
  formData,
  updateFormData,
}: {
  formData: FormData;
  updateFormData: (data: Partial<FormData>) => void;
}) {
  const [showInvites, setShowInvites] = useState(false);
  const [inviteEmail, setInviteEmail] = useState("");

  const addInvite = () => {
    if (!inviteEmail) return;

    // Validate email
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if (!emailRegex.test(inviteEmail)) {
      toast.error("Please enter a valid email address");
      return;
    }

    // Check for duplicates
    if (formData.invitation_emails?.includes(inviteEmail)) {
      toast.error("This email is already invited");
      return;
    }

    updateFormData({
      invitation_emails: [...(formData.invitation_emails || []), inviteEmail],
    });
    setInviteEmail("");
  };

  const removeInvite = (email: string) => {
    updateFormData({
      invitation_emails: formData.invitation_emails?.filter((e) => e !== email),
    });
  };

  return (
    <div className="space-y-8">
      <div>
        <h2 className="text-3xl mb-2 tracking-tight font-display font-bold">
          Your workspace awaits
        </h2>
        <p className="text-sm text-neutral-500 dark:text-neutral-400">
          Set up your team and start collaborating
        </p>
      </div>

      {/* Workspace Name */}
      <div>
        <Label htmlFor="workspace-name" className="text-base font-medium block mb-3">Workspace Name *</Label>
        <Input
          id="workspace-name"
          placeholder="My Awesome Company"
          value={formData.workspace_name}
          onChange={(e) => updateFormData({ workspace_name: e.target.value })}
          disabled={formData.workspace_skip_naming}
        />
        <div className="flex items-center gap-2 mt-4">
          <Checkbox
            id="skip-naming"
            checked={formData.workspace_skip_naming}
            onCheckedChange={(checked) =>
              updateFormData({ workspace_skip_naming: checked as boolean })
            }
          />
          <label htmlFor="skip-naming" className="text-sm cursor-pointer">
            Skip for now
          </label>
        </div>
      </div>

      {/* Subdomain */}
      <div>
        <Label htmlFor="subdomain" className="text-base font-medium block mb-3">Choose your subdomain *</Label>
        <div className="relative">
          <Input
            id="subdomain"
            placeholder="my-company"
            value={formData.subdomain}
            onChange={(e) =>
              updateFormData({ subdomain: e.target.value.toLowerCase() })
            }
          />
        </div>
        <p className="text-xs text-muted-foreground">
          Your workspace: <span className="text-primary font-medium">{formData.subdomain || "your-subdomain"}</span>.corteksa.com
        </p>
      </div>

      {/* Team Invitations */}
      <div>
        <div className="flex items-center justify-between">
          <Label className="text-base font-medium block mb-3">Invite Team Members (Optional)</Label>
          {!showInvites && (
            <Button
              type="button"
              variant="outline"
              size="sm"
              onClick={() => setShowInvites(true)}
            >
              Invite Team
            </Button>
          )}
        </div>

        {showInvites && (
          <div className="space-y-3">
            <div className="flex gap-2">
              <Input
                placeholder="colleague@example.com"
                value={inviteEmail}
                onChange={(e) => setInviteEmail(e.target.value)}
                onKeyPress={(e) => e.key === "Enter" && addInvite()}
              />
              <Button type="button" onClick={addInvite}>
                Add
              </Button>
            </div>

            {formData.invitation_emails && formData.invitation_emails.length > 0 && (
              <div className="space-y-2">
                {formData.invitation_emails.map((email) => (
                  <div
                    key={email}
                    className="flex items-center justify-between p-2 bg-muted rounded-lg"
                  >
                    <span className="text-sm">{email}</span>
                    <button
                      type="button"
                      onClick={() => removeInvite(email)}
                      className="text-destructive hover:text-destructive/80"
                    >
                      Remove
                    </button>
                  </div>
                ))}
              </div>
            )}

            <div className="flex items-center gap-2 mt-4">
              <Checkbox
                id="skip-invites"
                checked={formData.invite_skipped}
                onCheckedChange={(checked) =>
                  updateFormData({ invite_skipped: checked as boolean })
                }
              />
              <label htmlFor="skip-invites" className="text-sm cursor-pointer">
                Skip invitations for now
              </label>
            </div>
          </div>
        )}
      </div>
    </div>
  );
}

